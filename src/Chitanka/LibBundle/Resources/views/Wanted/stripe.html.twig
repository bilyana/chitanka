{% if book is defined %}
	<div class="alert alert-info alert-dismissable" id="wanted-book">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<p><a href="{{ path('wanted') }}">Търсим</a>:
		{% if put_link %}
			<b><a href="{{ path('wanted') }}">{{ book.description }}</a></b>
		{% else %}
			<b>{{ book.description|raw }}</b>
		{% endif %}
		</p>
	</div>
{% endif %}
