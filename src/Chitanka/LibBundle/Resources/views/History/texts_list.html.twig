{% import 'LibBundle::text.html.twig' as texttools %}

{% for day, revisions in text_revisions_by_date %}
	<h3>{{ day|humandate }}</h3>
	<ul class="superlist">
	{% for revision in revisions %}
		{% set prefix %}
			<span title="{{ revision.comment }}">{{ revision.first ? 'Н' : 'к' }}</span>
		{% endset %}
		<li class="title t-{{ revision.text.type }}">{{ texttools.text_with_author(revision.text, {'prefix': prefix}) }}</li>
	{% endfor %}
	</ul>
{% else %}
	<p class="no-items">Няма намерени произведения.</p>
{% endfor %}
