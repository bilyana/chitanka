		<h3>{{ title }}</h3>
		{{ navbody|raw }}
	</div>
{% endfor %}

<div id="nav-extra-books" class="navbody">
	<h3>Препоръчано</h3>
	<div class="navcontent">
		{{ render(controller('App:FeaturedBook:book')) }}
	</div>
	<div class="navfooter"><a href="{{ path('featured_books') }}">още четива »</a></div>
</div>

<div id="nav-extra-links" class="navbody">
