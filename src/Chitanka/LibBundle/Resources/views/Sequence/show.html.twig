{% extends 'LibBundle::layout.html.twig' %}

{% set title = '<a class="selflink" data-edit="'~ path('admin_sequence_edit', {'id': sequence.id}) ~'">'~ sequence.name ~'</a>' %}
{% set subtitle = 'издателска поредица' %}
{% block content %}
	<ul class="breadcrumbs" itemprop="breadcrumb">
		<li><a href="{{ path('sequences') }}">Издателски поредици</a></li>
		<li><a href="{{ path('sequences_by_alpha', {'letter': sequence.name|first_char}) }}">{{ sequence.name|first_char }}</a></li>
		<li>{{ sequence.name }}
			{% if sequence.publisher %}
				({{ sequence.publisher }})
			{% endif %}
		</li>
	</ul>
	{% include 'LibBundle:Book:list.html.twig' %}
{% endblock %}
