<ul class="two-columns">
{% for label in labels %}
	<li>
		<a href="{{ path('texts_by_type', {'type': label.slug}) }}">{{ label.name }}</a>
		({{ label.nr_of_texts }})
		{#
		{% if has_role("ROLE_ADMIN") %}
			<a href="{{ path('label_edit', {'id': label.id}) }}" title="Редактиране на етикета" class="edit"><span>редактиране</span></a>
		{% endif %}
		#}
	{% if label.children is defined %}
		{% include 'LibBundle:Text:label_tree.html.twig' with {'labels': label.children} %}
	{% endif %}
	</li>
{% endfor %}
</ul>
