{% extends 'App::layout.xml.twig' %}

{% block body %}
<results query="{{ query.text }}">
	{% if persons|length %}
		{% include 'App:Person:list.xml.twig' %}
	{% endif %}

	{% if texts|length %}
		{% include 'App:Text:list.xml.twig' %}
	{% endif %}

	{% if books|length %}
		{% include 'App:Book:list.xml.twig' %}
	{% endif %}

	{% if series|length %}
		{% include 'App:Series:list.xml.twig' %}
	{% endif %}

	{% if sequences|length %}
		{% include 'App:Sequence:list.xml.twig' %}
	{% endif %}

	{% if labels|length %}
		{% include 'App:Label:list.xml.twig' %}
	{% endif %}

	{% if categories|length %}
		{% include 'App:Category:list.xml.twig' %}
	{% endif %}

	{% if work_entries|length %}
		{% include 'App:WorkEntry:list.xml.twig' with {'entries': work_entries} %}
	{% endif %}
</results>
{% endblock %}
