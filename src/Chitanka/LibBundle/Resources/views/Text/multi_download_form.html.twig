{% macro download_link(texts, format) %}
	{% set ids = '' %}
	{% for text in texts %}
		{% set ids = ids ~ (loop.first ? '' : ',') ~ text.id %}
	{% endfor %}
	<a href="{{ path('text_show_multi', {'id': ids, '_format': format}) }}" title="Сваляне на всички във формат {{ format }}" class="dl dl-{{ format|replace({'.zip': ''}) }}"><span>{{ format }}</span></a>
{% endmacro %}

<dl class="download-multi">
	<dt>Сваляне на всички:</dt>
	<dd class="download">
		<ul class="dl-list">
			<li>{{ _self.download_link(texts, 'fb2.zip') }}</li>
			<li>{{ _self.download_link(texts, 'epub') }}</li>
			<li>{{ _self.download_link(texts, 'txt.zip') }}</li>
			<li>{{ _self.download_link(texts, 'sfb.zip') }}</li>
		</ul>
	</dd>
</dl>
