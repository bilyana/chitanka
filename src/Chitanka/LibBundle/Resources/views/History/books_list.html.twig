<div class="feed-standalone">
	<a href="{{ path('new_books', {'_format': 'rss'}) }}" title="RSS 2.0 — нови книги" rel="feed"><i class="fa fa-rss"> RSS</i></a>
</div>
{% import 'LibBundle::book.html.twig' as booktools %}
{% for day, revisions in book_revisions_by_date %}
	<h3>{{ day|humandate }}</h3>
	<ul class="superlist booklist">
	{% for revision in revisions %}
		<li title="{{ revision.comment }}">{{ booktools.book(revision.book) }}</li>
	{% endfor %}
	</ul>
{% else %}
	<p class="no-items">
		{% import 'LibBundle::helper.html.twig' as helper %}
		{{ helper.not_found('Няма намерени книги.') }}
	</p>
{% endfor %}
