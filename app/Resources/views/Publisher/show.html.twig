{% extends 'App::layout.html.twig' %}

{% set title = 'Издателска витрина на ' ~ publisher.name %}
{% block content %}
	<ul class="breadcrumb" itemprop="breadcrumb">
		<li><a href="{{ path('publishers_index') }}">Издатели</a></li>
		<li class="active">
			{{ publisher.name }}
		</li>
	</ul>
	{% if publisher.extraInfo is not empty %}
		<div class="panel panel-info">
			<div class="panel-heading">
				Сайт: <a href="{{ publisher.website }}">{{ publisher.website }}</a>
			</div>
			<div class="panel-body">
				{{ publisher.extraInfo|raw }}
			</div>
		</div>
	{% endif %}
	<div class="booklist">
		{% for book in publisher.foreignBooks %}
			<div class="col-md-6 col-book">
				{% include 'App:ForeignBook:book_media.html.twig' with {book: book} %}
			</div>
		{% endfor %}
	</div>
{% endblock %}
