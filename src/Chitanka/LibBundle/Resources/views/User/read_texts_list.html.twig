{% if is_owner %}
	<p>Само вие може да виждате този списък. Ако желаете да дадете достъп до списъка и на други лица, ползвайте следния адрес: <a href="{{ url('user_read_list', {'username': user.token}) }}">{{ url('user_read_list', {'username': user.token}) }}</a></p>
{% endif %}
<ul class="superlist">
{% import 'LibBundle::text.html.twig' as texttools %}
{% for read_text in read_texts %}
	<li class="title t-{{ read_text.text.type }}" title="{{ read_text.created_at|humandate }}">{{ texttools.text_with_author(read_text.text) }}</li>
{% endfor %}
</ul>
