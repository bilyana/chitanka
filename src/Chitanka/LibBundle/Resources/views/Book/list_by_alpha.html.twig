{% extends 'LibBundle::layout.html.twig' %}

{% set title = 'Книги' %}
{% if letter != '-' %}
	{% set subtitle = letter %}
{% endif %}
{% block content %}

	<ul class="breadcrumb" itemprop="breadcrumb">
		<li><a href="{{ path('books') }}">Книги</a></li>
		<li class="active">{{ letter == '-' ? 'Всички' : letter }}</li>
	</ul>

	{% include 'LibBundle:Book:navigation.html.twig' with {'letter': letter} %}
	{% include 'LibBundle:Book:list.html.twig' %}
	{% include 'LibBundle::pager.html.twig' %}

{% endblock %}
