{% extends 'LibBundle::layout.html.twig' %}

{% set title = sequence.name %}
{% set subtitle = 'издателска поредица' %}
{% block content %}
	<ul class="breadcrumbs">
		<li><a href="{{ path('sequences') }}">Издателски поредици</a></li>
		<li><a href="{{ path('sequences_by_letter', {'letter': sequence.name|first_char}) }}">{{ sequence.name|first_char }}</a></li>
		<li>{{ sequence.name }}
			{% if sequence.publisher %}
				({{ sequence.publisher }})
			{% endif %}
		</li>
	</ul>
	{% include 'LibBundle:Book:books_list.html.twig' %}
{% endblock %}
